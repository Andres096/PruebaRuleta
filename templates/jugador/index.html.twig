{% extends 'base.html.twig' %}

{% block title %}Jugador index{% endblock %}

{% block body %}
    <h1>JUGADORES</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Usuario</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Dinero</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for jugador in jugadors %}
            <tr>
                <td>{{ jugador.id }}</td>
                <td>{{ jugador.usuario }}</td>
                <td>{{ jugador.nombre }}</td>
                <td>{{ jugador.apellido }}</td>
                <td>{{ jugador.dinero }}</td>
                <td>
                    <a href="{{ path('jugador_show', {'id': jugador.id}) }}">show</a>
                    <a href="{{ path('jugador_edit', {'id': jugador.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('jugador_new') }}">Create new</a>
{% endblock %}
